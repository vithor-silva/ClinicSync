@model ClinicSync.Models.Consultation

@{
    ViewData["Title"] = "Edit";
}

<h1 class="text-center text-primary my-4">Editar Consulta</h1>

<div class="card shadow-sm mx-auto" style="max-width: 500px;">
    <div class="card-body">
        <h4 class="card-title text-secondary text-center">Atualize os Dados</h4>
        <hr />
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
            <input type="hidden" asp-for="Id" />

            <div class="mb-3">
                <label asp-for="Name" class="form-label fw-bold">
                    <i class="bi bi-person"></i> Nome
                </label>
                <input asp-for="Name" class="form-control border-primary" placeholder="Digite o nome completo" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Email" class="form-label fw-bold">
                    <i class="bi bi-envelope"></i> Email
                </label>
                <input asp-for="Email" class="form-control border-primary" placeholder="Digite o email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Phone" class="form-label fw-bold">
                    <i class="bi bi-telephone"></i> Telefone
                </label>
                <input asp-for="Phone" class="form-control border-primary" placeholder="Digite o telefone" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Doctor" class="form-label fw-bold">
                    <i class="bi bi-person-badge"></i> Médico
                </label>
                <input asp-for="Doctor" class="form-control border-primary" placeholder="Digite o nome do médico" />
                <span asp-validation-for="Doctor" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Speciality" class="form-label fw-bold">
                    <i class="bi bi-briefcase-medical"></i> Especialidade
                </label>
                <input asp-for="Speciality" class="form-control border-primary" placeholder="Digite a especialidade" />
                <span asp-validation-for="Speciality" class="text-danger"></span>
            </div>

            <div class="d-grid">
                <button type="submit" class="btn btn-success fw-bold">
                    <i class="bi bi-check-circle"></i> Salvar
                </button>
            </div>
        </form>
    </div>
</div>

<div class="text-center mt-4">
    <a asp-action="Index" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left"></i> Voltar para a Lista
    </a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
