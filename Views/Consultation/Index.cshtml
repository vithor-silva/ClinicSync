@model IEnumerable<ClinicSync.Models.Consultation>

@{
    ViewData["Title"] = "Index";
}

<h1 class="text-center text-primary my-4">Consultas</h1>
<p class="text-center text-muted mb-5">Faça a gestão das suas consultas. Aqui você consegue: Ver suas consultas, editar, excluir e agendar novas consultas.</p>

<div class="d-flex justify-content-start mb-4">
    <a asp-action="Create" class="btn btn-success d-flex align-items-center">
        <i class="bi bi-calendar-check me-2" style="font-size: 20px;"></i> Agendar Consulta
    </a>
</div>

<table class="table table-striped table-hover shadow rounded" style="overflow: hidden; background: #f9f9f9;">
    <thead class="bg-primary text-white">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Doctor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Speciality)
            </th>
            <th class="text-center">Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.Email)</td>
                <td>@Html.DisplayFor(modelItem => item.Phone)</td>
                <td>@Html.DisplayFor(modelItem => item.Doctor)</td>
                <td>@Html.DisplayFor(modelItem => item.Speciality)</td>
                <td class="text-center">
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary me-1">
                        <i class="bi bi-pencil-square"></i>
                    </a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info me-1">
                        <i class="bi bi-eye"></i>
                    </a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">
                        <i class="bi bi-trash3"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
