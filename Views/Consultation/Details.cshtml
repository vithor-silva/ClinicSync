@model ClinicSync.Models.Consultation

@{
    ViewData["Title"] = "Details";
}

<h1 class="text-center text-primary my-4">Detalhes da Consulta</h1>

<div class="card shadow-sm mx-auto" style="max-width: 600px;">
    <div class="card-body">
        <h4 class="card-title text-secondary">Informações da Consulta</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-3 fw-bold">
                <i class="bi bi-person"></i> @Html.DisplayNameFor(model => model.Name)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Name)
            </dd>

            <dt class="col-sm-3 fw-bold">
                <i class="bi bi-envelope"></i> @Html.DisplayNameFor(model => model.Email)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Email)
            </dd>

            <dt class="col-sm-3 fw-bold">
                <i class="bi bi-telephone"></i> @Html.DisplayNameFor(model => model.Phone)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Phone)
            </dd>

            <dt class="col-sm-3 fw-bold">
                <i class="bi bi-person-badge"></i> @Html.DisplayNameFor(model => model.Doctor)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Doctor)
            </dd>

            <dt class="col-sm-3 fw-bold">
                <i class="bi bi-briefcase-medical"></i> @Html.DisplayNameFor(model => model.Speciality)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Speciality)
            </dd>
        </dl>
    </div>
</div>

<div class="d-flex justify-content-center gap-3 mt-4">
    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning">
        <i class="bi bi-pencil"></i> Editar
    </a>
    <a asp-action="Index" class="btn btn-secondary">
        <i class="bi bi-arrow-left"></i> Voltar para a Lista
    </a>
</div>