@model ClinicSync.Models.Consultation

@{
    ViewData["Title"] = "Delete";
}

<h1 class="text-center text-danger my-4">Excluir Consulta</h1>

<div class="card shadow-sm mx-auto" style="max-width: 600px;">
    <div class="card-body">
        <h4 class="card-title text-secondary">Tem certeza que deseja excluir esta consulta?</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-3 fw-bold">
                <i class="bi bi-person"></i> @Html.DisplayNameFor(model => model.Name)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Name)
            </dd>

            <dt class="col-sm-3 fw-bold">
                <i class="bi bi-envelope"></i> @Html.DisplayNameFor(model => model.Email)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Email)
            </dd>

            <dt class="col-sm-3 fw-bold">
                <i class="bi bi-telephone"></i> @Html.DisplayNameFor(model => model.Phone)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Phone)
            </dd>

            <dt class="col-sm-3 fw-bold">
                <i class="bi bi-person-badge"></i> @Html.DisplayNameFor(model => model.Doctor)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Doctor)
            </dd>

            <dt class="col-sm-3 fw-bold">
                <i class="bi bi-briefcase-medical"></i> @Html.DisplayNameFor(model => model.Speciality)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Speciality)
            </dd>
        </dl>

        <form asp-action="Delete" class="text-center">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger mx-2">
                <i class="bi bi-trash"></i> Excluir
            </button>
            <a asp-action="Index" class="btn btn-outline-secondary mx-2">
                <i class="bi bi-arrow-left"></i> Voltar para a Lista
            </a>
        </form>
    </div>
</div>